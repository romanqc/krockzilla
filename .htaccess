# Turn on URL rewriting
RewriteEngine on

# Skip if actual directory
RewriteCond %{REQUEST_FILENAME} -d [OR]

# Skip if actual file (like about.html, style.css, etc.)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Route /about (or /about/) to index.html
RewriteRule ^about/?$ index.html [L]

# Optional: Route any clean URL (like /contact) to .html files if they exist
RewriteCond %{DOCUMENT_ROOT}/$1.html -f
RewriteRule ^(.+)$ $1.html [L]






